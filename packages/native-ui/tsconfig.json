{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "angular-desktop-ui": [
        "dist/"
      ]
    },
    "useDefineForClassFields": false
  },
  "include": [
    "./src",
    "create-font.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
